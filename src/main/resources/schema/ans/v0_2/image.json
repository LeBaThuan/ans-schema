{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/v0_2/image.json",
    "title": "An image.",
    "description": "Holds attributes of an ANS image component.",
    "type": "object",
    "required": ["image_url"],
    "allOf": [{
            "$ref": "trait_guid.json",
            "$ref": "trait_dated.json",
            "$ref": "trait_credited.json",
            "properties": {
                "subtitle": {
                    "description": "Subtitle for the image.",
                    "type": "string"
                },
                "caption": {
                    "description": "Caption for the image.",
                    "type": "string"
                },
                "image_url": {
                    "description": "URL for the image.",
                    "type": "string"
                },
                "width": {
                    "description": "Width for the image.",
                    "type": "number"
                },
                "height": {
                    "description": "Height for the image.",
                    "type": "number"
                }
            }
        }
    ]
}
