{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.0/address.json",
  "description": "An Address following the convention of http://microformats.org/wiki/hcard",
  "type": "object",
  "properties": {
    "post_office_box": {
      "type": "string"
    },
    "extended_address": {
      "type": "string"
    },
    "street_address": {
      "type": "string"
    },
    "locality": {
      "type": "string"
    },
    "region": {
      "type": "string"
    },
    "postal_code": {
      "type": "string"
    },
    "country_name": {
      "type": "string"
    }
  },
  "dependencies": {
    "post_office_box": ["street_address"],
    "extended_address": ["street_address"]
  }
}
