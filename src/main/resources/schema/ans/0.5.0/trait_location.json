{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.0/trait_location.json",
    "title": "Location related trait",
    "description": "Captures information related to the location of the content.",
    "type": "object",
    "properties": {
        "location": {
            "description": "A description of the location, useful if a full address or lat/long specification is overkill.",
            "type": "string"
        },
        "geo": {
            "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.0/geo.json",
            "description": "Latitidue and Longitude of the content"
        },
        "address": {
            "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.5.0/address.json",
            "description": "Address of the content"
        }
    }
}
