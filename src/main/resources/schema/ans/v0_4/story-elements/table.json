            "type": "object",
            "allOf": [
              {
                "$ref": "text.json"
              }
            ]
          }
	    },
        "rows" : {
	      "type" : "array",
          "description": "The data rows of the table",
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "allOf": [
                {
                  "$ref": "text.json"
                }
              ]
            }
	      }
        }
      },
      "required": [ "rows" ]
    }
  ]
}
