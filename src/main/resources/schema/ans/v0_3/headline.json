{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/v0_3/headline.json",
    "description": "A headline, with optional associated purpose identifier",
    "type": "object",
    "required": ["headline"],
    "properties": {
        "headline": { 
            "type": "string",
            "description": "The headline content to display."
        },
        "purpose": { 
            "type": "string",
            "description": "The purpose/audience/channel/etc the headline is intended for."
        }
    }
}